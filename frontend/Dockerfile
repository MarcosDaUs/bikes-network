FROM node:current-alpine AS builder

WORKDIR /app

COPY package*.json ./
COPY .npmrc ./

RUN npm i

COPY . .

ARG REACT_APP_GOOGLE_SIGN_IN_CLIENT_ID
ARG REACT_APP_BIKES_API_URL
ARG REACT_APP_LOCATION_API_URL
ARG REACT_APP_SERVICES_API_URL
ARG REACT_APP_RENT_API_URL
ENV REACT_APP_GOOGLE_SIGN_IN_CLIENT_ID=$REACT_APP_GOOGLE_SIGN_IN_CLIENT_ID
ENV REACT_APP_BIKES_API_URL=$REACT_APP_BIKES_API_URL
ENV REACT_APP_LOCATION_API_URL=$REACT_APP_LOCATION_API_URL
ENV REACT_APP_SERVICES_API_URL=$REACT_APP_SERVICES_API_URL
ENV REACT_APP_RENT_API_URL=$REACT_APP_RENT_API_URL

RUN npm run build

FROM nginx:alpine AS final

ENV NODE_ENV production

COPY --from=builder /app/build /usr/share/nginx/html

COPY nginx.conf /etc/nginx/conf.d/default.conf

ENTRYPOINT ["nginx", "-g", "daemon off;"]